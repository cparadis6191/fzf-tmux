#!/usr/bin/env bash

_fzf_tmux_capture_pane_lines() {
	tmux capture-pane -J -e -p |
		sed --expression='/^$/d' |
		head --lines=-1 |
		uniq |
		__fzf_tmux_fzf --ansi \
		--layout=default \
		--multi \
		--tac \
		--header=$'\nALT-E (open in editor)' \
		--bind="alt-e:execute:${EDITOR:-vim} {-1} > /dev/tty" |
		sed --expression='s/^[[:space:]]*//' --expression='s/[[:space:]]*$//'
}

_fzf_tmux_capture_pane_lines "$@"
